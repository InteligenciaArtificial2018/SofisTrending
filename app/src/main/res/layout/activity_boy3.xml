<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorFondoSecundario">
    <LinearLayout android:layout_width="0dp"
                  android:layout_height="42dp" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="0.445"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                  android:id="@+id/linearLayout"
                  android:background="@color/colorFondoSecundario">
        <TextView
                android:text="Hanna Andersson"
                android:layout_width="match_parent"
                android:textSize="24sp"
                android:textAlignment="center"
                android:background="@color/colorFondoSecundario"
                android:layout_height="match_parent" android:id="@+id/tvTitulo"
                android:layout_weight="1"/>
    </LinearLayout>
    <android.support.v7.widget.LinearLayoutCompat android:layout_width="0dp"
                                                  android:layout_height="90dp"
                                                  android:background="@color/colorFondoSecundario"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginTop="12dp"
                                                  app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                                                  app:layout_constraintHorizontal_bias="1.0"
                                                  android:id="@+id/linearLayoutCompat">
        <TextView
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:background="@color/colorFondoSecundario"
                android:textAlignment="center"
                android:layout_height="match_parent" android:id="@+id/tvPrecio"
                android:layout_weight="1"
                android:text="Ropa para nilÃ±a para dia casual"/>
    </android.support.v7.widget.LinearLayoutCompat>
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:background="@color/colorFondoSecundario"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat" android:id="@+id/linearLayout2">
        <ImageView
                android:layout_width="314dp"
                android:background="@color/colorFondoSecundario"
                android:layout_height="wrap_content" app:srcCompat="@drawable/boy3" android:id="@+id/imgDetalle"
                android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:text="Carrito"
            android:background="@drawable/estilo_botones"
            android:layout_width="135dp"
            android:layout_height="wrap_content"

            android:id="@+id/btnCarrito" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/white" android:drawableLeft="@drawable/carrito"
            android:paddingLeft="10dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

</android.support.constraint.ConstraintLayout>
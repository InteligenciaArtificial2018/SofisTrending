<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Caballero">

    <TextView
            android:text="@string/txtCaballero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCaballero" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:fontFamily="sans-serif" android:textColor="@color/colorAccent"
            android:textSize="30sp"/>
    <TextView
            android:text="@string/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCaballero" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:fontFamily="sans-serif" android:textColor="@color/colorAccent"
            android:textSize="24sp"/>
    <ImageView
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="@android:dimen/thumbnail_height" app:srcCompat="@drawable/mm2"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView6" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/t2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"/>
    <ImageView
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="@android:dimen/thumbnail_height" app:srcCompat="@drawable/mm3"
            android:id="@+id/imageView7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="@android:dimen/thumbnail_height" app:srcCompat="@drawable/mm4"
            android:id="@+id/imageView8" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView7"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="@android:dimen/thumbnail_height" app:srcCompat="@drawable/pol"
            android:id="@+id/imageView15" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/t2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView8" app:layout_constraintVertical_bias="0.923"
            app:layout_constraintStart_toEndOf="@+id/imageView6" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>
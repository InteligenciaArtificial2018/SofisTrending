<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:text="TextView"
            android:layout_width="231dp"
            android:layout_height="wrap_content" android:id="@+id/tvTitulo" android:layout_weight="1"
            android:gravity="center" tools:text="prenda"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.503" android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/tvContenido"
            android:textSize="20dp"/>

    <TextView
            android:text="@android:string/VideoView_error_text_invalid_progressive_playback"
            android:layout_width="284dp"
            android:layout_height="wrap_content" android:id="@+id/tvContenido" android:layout_weight="1"
            android:gravity="left|center"
            app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            tools:text="hola" android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imgPrenda"
            app:layout_constraintVertical_bias="0.53" android:textSize="20dp"/>

    <ImageView
            android:layout_width="264dp"
            android:layout_height="191dp" app:srcCompat="@drawable/boy1" android:id="@+id/imgPrenda"
            android:layout_weight="1"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/tvContenido" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnCarrito" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/btnCarrito"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.508" android:layout_marginStart="76dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="76dp"
            app:layout_constraintTop_toBottomOf="@+id/imgPrenda" android:background="@drawable/carrito"
            android:layout_width="80dp" android:layout_height="70dp"/>
    <Button
            android:id="@+id/btnCompra"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.705"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp" app:layout_constraintTop_toBottomOf="@+id/imgPrenda"
            app:layout_constraintStart_toEndOf="@+id/btnCarrito" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.592"
            android:background="@drawable/tarjeta" android:layout_width="80dp" android:layout_height="70dp"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/tvSofiasTrending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSofiasTrending"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:fontFamily="serif" android:textSize="30sp"
            android:textColor="@color/colorAccent" app:layout_constraintHorizontal_bias="0.572"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/portada"
            android:id="@+id/imgPortada" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSofiasTrending" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.638"/>
    <Button
            android:text="@string/btnIniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIniciar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/btnSalir"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/imgPortada" app:layout_constraintHorizontal_bias="0.705"
            android:textColor="@android:color/white" android:background="@color/colorAccent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSalir" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp" android:textColor="@android:color/white"
            android:background="@color/colorAccent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/imgPortada" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
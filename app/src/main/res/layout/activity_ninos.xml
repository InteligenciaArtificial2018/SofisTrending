<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ninos">

    <TextView
            android:text="@string/txtNiño"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNiño" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:fontFamily="sans-serif" android:textColor="@color/colorAccent"
            android:textSize="30sp"/>
    <TextView
            android:text="@string/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNiño" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:fontFamily="sans-serif" android:textColor="@color/colorAccent"
            android:textSize="24sp"/>
    <ImageView
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="@android:dimen/thumbnail_height" app:srcCompat="@drawable/p1"
            android:id="@+id/imageView9" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/t3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="@android:dimen/thumbnail_height" app:srcCompat="@drawable/p2"
            android:id="@+id/imageView10" app:layout_constraintStart_toEndOf="@+id/imageView9"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/t3"/>
    <ImageView
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="@android:dimen/thumbnail_height" app:srcCompat="@drawable/p4"
            android:id="@+id/imageView11" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="202dp" app:srcCompat="@drawable/p3"
            android:id="@+id/imageView12" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView10" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>